generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NUXT_DATABASE_URL")
  directUrl = env("NUXT_DIRECT_URL")
}

model Users {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
  firstName String?
  lastName  String?
}